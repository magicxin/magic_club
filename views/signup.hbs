<form action="/user/signup" method="POST">
	{{#if msg}}
		<div class="item">
			<text>{{msg}}</text> 
		</div>
	{{/if}}
	<div class="item">
		<text>邮箱</text><input type="text" name="user[username]"/>
	</div>
	<div class="item">
		<text>密码</text><input type="password" name="user[password]"/>
	</div>
	<div class="item">
		<input class="btn" type="submit" value="注册"/>
	</div>
	
</form>